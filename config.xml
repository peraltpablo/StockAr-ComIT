<?xml version='1.0' encoding='utf-8'?>
<widget id="com.peraltpablo.stockar" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>StockAr</name>
    <description>
        StockAr en una excelente aplicación para llevar el control de tu stock, agenda y facturas. Incluye gráficos estadísticos y alertas de gran utilidad.
    </description>
    <author email="peraltapablo@live.com" href="">
        Pablo E. Peralta
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
</widget>
